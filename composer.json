{
	"name": "marttii/marva",
	"description": "open source web software for lets groups.",
	"license": "AGPL-3.0",


    "require": {
 
        "nusoap/nusoap": "0.9.5",
        "jqplot/jqplot": "1.0.8",
        "neutron/recaptcha": "~0.1",
        "twbs/bootstrap": "3.1.1",
        "twitter/typeahead.js": "0.10.*",
        "blueimp/jquery-file-upload": "9.5.7",
        "components/jquery": "1.11.*",
        "components/font-awesome": "4.0.*",
        "eternicode/bootstrap-datepicker": "1.3.0",

        "silex/silex": "~1.1",
        "twig/twig": ">=1.8,<2.0-dev",
        "symfony/twig-bridge": "~2.3",
        "symfony/translation": "~2.3",
		"symfony/config": "~2.3",
		"symfony/yaml": "~2.3",
		"symfony/validator": "~2.3",
		"symfony/form": "~2.3",		        
		"symfony/locale": "~2.3",       
        "doctrine/dbal": "2.2.*",
        "monolog/monolog": ">=1.0.0",
        "swiftmailer/swiftmailer": ">=4.1.2,<4.2-dev",
        "symfony/security": "~2.3"
 
    },

    "autoload": {
        "psr-0": { "Marva": "src" }
    },

    
   	"config": {
        "component-dir": "vendor"
    },
        
    "repositories": [
        {
            "type": "package",
            "package": {
				"name": "nusoap/nusoap",
				"version": "0.9.5",
				"dist": {
					"url": "http://downloads.sourceforge.net/project/nusoap/nusoap/0.9.5/nusoap-0.9.5.zip",
					"type": "zip"            
				},               
				 "autoload": {
                    "classmap": ["lib/"]
                }
			}
        },
        {
            "type": "package",
            "package": {
				"name": "recaptcha/recaptcha",
				"version": "1.11",
				"dist": {
					"url": "http://recaptcha.googlecode.com/files/recaptcha-php-1.11.zip",
					"type": "zip"            
				},
			    "autoload": {
					"files": ["recaptchalib.php"]
				}			
			}
        },
        {
            "type": "package",
            "package": {
				"name": "jqplot/jqplot",
				"version": "1.0.8",
				"dist": {
					"url": "https://bitbucket.org/cleonello/jqplot/downloads/jquery.jqplot.1.0.8r1250.zip",
					"type": "zip"            
				}			
			}
        }
                    
    ]  
}
